{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/ng-github.com-fullstack-lang-gongsim"
        },
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/ng-github.com-fullstack-lang-gongsim"
        },
        {
            "name": "go run gongsim",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/go/cmd/gongsim",
            "args": []
        },
        {
            "name": "go run gongsim & play",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/go/cmd/gongsim",
            "args": [
                "-play",
                "-displayWatch",
                // "-cpuprofile",
                // "../simprof"
            ]
        },
        {
            "name": "Launch TestLadybugSim",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/go/tests",
            "args": [
                "-test.run",
                "TestLadybugSim"
            ],
            "showLog": true
        }
    ]
}